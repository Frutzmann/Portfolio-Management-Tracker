pipeline {
    agent any
    options {
        customWorkspace '/var/lib/jenkins/workspace/spring-experimental/pft'
    }

    stages {
        stage('Build maven') {
            steps {
                sh "mvn clean install"
            }
        }
        stage('Build docker') {
            steps {
                sh "docker build -t pftdev ."
            }
        }
    }
}